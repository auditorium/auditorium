<section id='alternative-search-form' class="block">
  <%= form_tag search_path, method: 'get', remote: true do %>
    <%= text_field_tag :query, nil, { placeholder: t('general.search.placeholder')} %>
    <noscript>
      <div class="large-2 columns"><%= submit_tag t('general.search.submit'), class: "button expand small #{color_scheme}" %></div>
    </noscript>
  <% end %>
</section>

<section id="alternative-search-results">
  <%= render 'shared/search_results' %>
</section>