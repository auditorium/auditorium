<header>
  <h2 class="subheader"><%= "#{t('posts.general.answers')}" %></h2>
</header>

<% @question.answers.each do |answer| %>
  <article id="answer" data-id="<%= dom_id(answer)%>">
     <%= render 'shared/answer', answer: answer %>
  </article>

  <section class="comments-section">
    <%= render 'shared/comments', commentable: answer %>
  </section>
<% end %>


<header>
  <h3><%= t('answers.headers.new_answer') %></h3>
</header>
<%= form_for([@question, @answer = Answer.new]) do |f| %>
  <%= f.label :content, t('answers.label.content'), class: 'accessibility' %>

  <%= render 'shared/text_editor_buttons' %>
  <%= f.text_area :content, required: true, 'data-post-type' => 'answer' %>
  
  <div class="preview">
    <div id="answer-preview"></div>
  </div>
  <span class="right">
    <%= link_to t('general.links.show_preview'), '#', class: 'toggle-preview tiny button review-button', 'data-id' => 'answer' %>
    <%= f.submit t('answers.actions.submit_answer'), id: 'submit-answer', class: 'tiny button answer' %>
  </span>
  <div class="clearfix"></div>
<% end %>