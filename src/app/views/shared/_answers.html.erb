<header>
  <h2 class="subheader"><%= "#{t('posts.general.answers')}" %></h2>
</header>

<% @question.answers.each do |answer| %>
  <article id="answer" data-id="<%= dom_id(answer)%>">
     <%= render 'shared/answer', answer: answer %>
  </article>

  <section class="comments-section">
    <%= render 'shared/comments', commentable: answer %>
  </section>
<% end %>


<header>
  <h3><%= t('answers.actions.new') %></h3>
</header>
<%= form_for([@question, @answer = Answer.new]) do |f| %>
  <%= f.label :content, t('forms.label.content'), class: 'accessibility' %>
  <%= f.text_area :content, placeholder: t('forms.placeholder.content'), required: true %>
  
  <div class="preview">
    <div id="answer-preview"></div>
  </div>

  <%= f.submit t('forms.submit.new_answer'), id: 'submit-answer', class: 'tiny button right answer' %>
  <%= link_to t('general.links.show_preview'), '#', class: 'toggle-preview tiny button review-button right', 'data-id' => 'answer' %>
  <div class="clearfix"></div>
<% end %>