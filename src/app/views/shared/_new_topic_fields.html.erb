<% @topic.tags = @group.tags %>
<li class="input-fields" class="input-fields">
  <%= render 'shared/text_editor_buttons', element_id: dom_id(@topic), element_name: @topic.class.name.downcase %>
  <%= f.label :content, class: 'accessibility' %>
  <%= f.text_area :content, placeholder: t('topics.placeholder.content') %>
  <div class="preview">
    <div id="topic-preview"></div>
  </div>
</li>

<li class="input-fields">
  <%= f.label :tag_tokens, t('tags.label') %>
  <%= f.text_field :tag_tokens, data: {load: @group.tags} %>
</li>

<li class="input-fields">
  <%= f.submit t('topics.actions.submit'), id: 'submit-topic', class: 'tiny button right submit' %>
  <div class="clearfix"></div>
</li>