<% # lecture %>
<div class="btn-group">
  <% if current_user %>

    <% if can? :update, lecture %>
      <%= link_to t('general.actions.edit'), edit_lecture_path(lecture), { :class => 'btn btn-mini btn-warning' }  %>
    <% end %>

    <% if can? :destroy, lecture %>
      <%= link_to 'delete', lecture, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %>
    <% end %>

  <% end %>
</div>
