<section id="welcome">
  <header id="welcome-header">
    <center>
      <h1><%= t('landing_page.headers.welcome_back') %></h1>
      <%= image_tag('auditorium_logo_colors.png',  { class: 'full-logo centered'}) %>
    </center>
  </header>
</section>

<section id="sign_up" class="block large-5 large-centered columns">  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
   <ul class="no-style"> 
    <li class="input-fields">
      <%= f.label :email, t('forms.label.email') %>
      <%= f.email_field :email, autofocus: true %>
    </li> 

    <li class="input-fields">
      <%= f.label :password, t('forms.label.password') %>
      <%= f.password_field :password %>
    </li>  

    <li class="input-fields">
      <%= f.label :password, t('forms.label.password_confirmation') %>
      <%= f.password_field :password %>
    </li>   

    <li class="input-fields">
      <%= f.label :username, t('forms.label.username') %>
      <%= f.text_field :username %>
    </li> 

    <li class="input-fields">
      <%= f.submit t('forms.label.sign_up'), class: 'button sign_up' %>
    </li>
    </ul>
  <% end %>
  <div class="registration_links">
    <%= render "devise/shared/links" %>
  </div>
</section>



