<% title t('landing_page.headers.forgot_password') %>
<section id="welcome">
  <header id="welcome-header">
    <center>
      <h1><%= t('landing_page.headers.welcome') %></h1>
      <%= image_tag('auditorium_logo_colors.png',  { class: 'full-logo centered'}) %>
    </center>
  </header>
</section>

<section id="sign_in" class="block large-5 large-centered columns">  
  <header>
    <h3 class="subheader"><%= t('landing_page.headers.forgot_password') %></h3>
  </header>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
    <ul class="no-style"> 
      <li class="input-fields">
        <%= f.label :email, t('forms.labels.email'), class: 'accessibility' %>
        <%= f.email_field :email, placeholder: t('forms.placeholder.email'), autofocus: true %>
      </li> 
      <li class="input-fields">
        <%= f.submit t('forms.labels.reset_password'), class: 'button submit wide' %>
      </li>
    </ul>
  <% end %>
  <div class="registration_links">
    <%= render "devise/shared/links" %>
  </div>
</section>




