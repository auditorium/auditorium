<% title @user %>
<header>
  <h2>
    <%= t('users.profile.progress.title') %>
  </h2>
</header>

<div class="row">
  <div class="large-12 columns">
    <h3><%= t('progress.level.header', level: 5)%></h3>
  <progress value="150" max="2250"></progress> <%= t('progress.point_difference', value: current_user.score, max: 2250) %>
  <p class="hint"><%= t('progress.level.next_level', points: 2105) %></p>
  </div>
</div>

<div class="row">
  <div id="tutorial-progress" class="large-6 columns">
    <h3><%= t('progress.tutorial_progress.header')%></h3>
    
    <ul class="plain-list">
      <li><progress value="<%= current_user.tutorial_progress.progress %>" max="<%= current_user.tutorial_progress.max_value %>"></progress> <%= t('progress.percentage', value: current_user.tutorial_progress.percentage) %></li>
      <li><%= is_done? current_user.tutorial_progress.introduction %>&nbsp;<%= t('progress.tutorial_progress.introduction') %></li>
      <li><%= is_done? current_user.tutorial_progress.groups %>&nbsp;<%= t('progress.tutorial_progress.groups') %></li>
      <li><%= is_done? current_user.tutorial_progress.group %>&nbsp;<%= t('progress.tutorial_progress.group') %></li>
      <li><%= is_done? current_user.tutorial_progress.question %>&nbsp;<%= t('progress.tutorial_progress.question') %></li>
    </ul>
  </div>
  <div id="profile-progress" class="large-6 columns">
    <h3><%= t('progress.profile_progress.header')%></h3>
    
    <ul class="plain-list">
      <li><progress value="<%= current_user.profile_progress %>" max="3"></progress> <%= t('progress.percentage', value: sprintf('%.2f', current_user.profile_progress_percentage)) %></li>
      <li><%= is_done? current_user.first_name.present? %>&nbsp;<%= t('progress.profile_progress.first_name') %></li>
      <li><%= is_done? current_user.last_name.present? %>&nbsp;<%= t('progress.profile_progress.last_name') %></li>
      <li><%= is_done? current_user.username.present? %>&nbsp;<%= t('progress.profile_progress.username') %></li></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3><%= t('progress.badges.header')%></h3>
  </div>
</div>