<header>
  <h2><%= t('users.headers.index') %></h2>
  <p><%= t('users.subheader.index') %></p>
</header>

  <table class="table">
    <thead>
      <tr>
        <td></td>
        <th>Name</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>

      <% params[:page].nil? ? page = 0 : page = params[:page].to_i-1 %> 
      <% @users.each_with_index do |user, i| %>
        <tr>
          <td width="35" style="border:0px; text-align:center;"><%= i + 1 + 10*page %></td>
          <td><%= link_to user.full_name, user_path(user) %></td>
          <td><%= user.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
</div>
