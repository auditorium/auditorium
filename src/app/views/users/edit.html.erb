<header>
  <h2><%= t('users.profile.personal_data.title') %></h2>
</header>
<section class="block">
  <%= form_for(@user) do |f|%>
    <ul class="no-style">
      <li class="input-fields">
        <%= f.label :title %>
        <%= f.text_field :title %>
        <p class="hint"><%= t('users.profile.personal_information.user_title') %></p>
      </li>
      <li class="input-fields">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </li>
      <li class="input-fields">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </li>

      <li class="input-fields">
        <%= f.label :username %>
        <%= f.text_field :username, :autocomplete => 'off' %>
      </li>

      <li class="input-fields">
        <%= f.label :email %>
        <%= f.email_field :email, :autocomplete => 'off' %>
        <% if resource.unconfirmed_email.present? %>
        <p class="hint"><%= t('users.pending_email_confirmation', email: resource.unconfirmed_email) %></p>
        <% end %>
      </li>
      <li class="input-fields">
            <%= f.submit t('users.profile.personal_information.submit'), class: 'tiny button users' %>
          </li>
      </ul>
      
  <% end %>
</section>
