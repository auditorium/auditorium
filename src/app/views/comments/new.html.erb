<section class="row">
  <header id="first-stop">
    <h2><%= t('comments.headers.new') %></h2>
  </header>
  <%= form_for([@commentable, @comment]) do |f| %>

  <div class="row">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'large-12 columns' %>
  </div>

  <div class="row">
    <% if params[:action].eql? 'new' %>
      <%= f.submit t('comments.actions.new'), class: 'small button' %>
    <% elsif params[:action].eql? 'edit' %>
      <%= f.submit t('comments.edit.submit'), class: 'small button' %>
    <% end %>
  </div>
<% end %>
</section>
