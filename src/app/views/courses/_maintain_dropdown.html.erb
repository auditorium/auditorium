<div class="btn-group">
<% if current_user and (current_user.is_course_maintainer?(course) or current_user.admin?) %>
  <%= link_to content_tag('i', ' maintain course', :class => 'fa-cog'), '#', :class => 'btn dropdown-toggle', 'data-toggle' => 'dropdown', :rel => 'tooltip', 'data-original-title' => 'maintain the course', :id => 'maintain-course' %>

  <ul class="dropdown-menu">
    <li>
      <%= link_to content_tag('span', ' manage users', :class=> 'fa-user'), '#manage-users-modal', 'data-toggle'=>"modal"%>
    </li>
    <li>
      <%= link_to content_tag('span', ' new semester', :class=> 'fa-plus'), new_course_path(:course => course) %>
    </li>
    <li>
      <%= link_to content_tag('span', ' edit course', :class=>'fa-edit'), edit_course_path %>
    </li>

    <li class="divider"></li>
    <li><%= link_to content_tag('span', ' delete course', :class=>'fa-trash'), course, confirm: 'Are you sure that you want to delete this course?', method: :delete %></li>

  </ul>
<% end %>
</div>