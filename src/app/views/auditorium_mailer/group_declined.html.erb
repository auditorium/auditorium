<!doctype html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <%= stylesheet_link_tag 'emails' %>
  </head>

  <body>
    <div id="email-header">
      <h2><%= t('emails.greetings.hello', user: @receiver) %></h2>
    </div>

    <div id="email-content">
      <%= t('emails.content.subjects.group_declined', creator: @creator, group: @group.title) %> 
      <div id="email-markdown">
        <h3><%= @group.title %></h3>
        <%= markdown @group.description %>
      </div>     
    </div>

    <p class="email-greetings">
      <%= t('emails.greetings.regards') %>
    </p>
  </body>
</html>


