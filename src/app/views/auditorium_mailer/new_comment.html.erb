<!doctype html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <%= stylesheet_link_tag 'emails' %>
  </head>

  <body>
    <div id="email-header">
      <h2><%= t('emails.greetings.hello', user: @receiver) %></h2>
    </div>

    <div id="email-content">
      <%= t('emails.content.subjects.new_comment', parent_post_author: @comment.commentable.author, parent_post_type: @comment.commentable_type, author: @author, group: @group.title) %> 
      <div id="email-markdown" class="markdown">
        <%= markdown @comment.content %>
      </div>     
      <%= link_to t('emails.content.goto.post', post_type: 'comment'), comment_url(@comment, locale: I18n.locale, anchor: dom_id(@comment)), class: 'button alert' %> 
    </div>

    <p class="email-greetings">
      <%= t('emails.greetings.regards') %>
    </p>

    <div id="email-footer">
      <%= t('emails.footer.text', group: @group.title) %>
      <%= link_to t('emails.footer.link'), user_url(@receiver, locale: I18n.locale) %>
    </div>
  </body>
</html>