<section id="groups">
  <header class="subheader topic-group">
    <h2>
      <%= t('groups.index.title')%>
      <span class="right"><small><%= link_to t('general.filter.hide'), '#', 'data-id' => 'toggle-group-filter', class: 'button filter tiny' %></small></span>
    </h2>
  </header>

  <div class="filter-block" data-id="group-filter">
    <div class="group-filter">
      <%= render 'shared/group_filter' %>
    </div>

    <div class="tag-filter <%= (params[:action].eql? 'my_groups') ? 'my-groups-filter' : 'groups-filter' %>">
      <%= form_tag groups_path, method: 'get' do %>

        <%= text_field_tag :tag_tokens, nil, data: {load: @tag_ids}, id: 'group_filter_tag_tokens' %>
        
        <%= label_tag :tag_tokens, t('general.filter.tag_filter.groups_filter'), class: 'hint' %> 
      <% end %>
    </div>
  </div>
  <div id="groups-grid">
    <%= render 'groups/groups_grid' %>
  </div>
</section>