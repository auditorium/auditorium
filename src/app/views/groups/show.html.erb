<nav class="subnav">
  <ul class="inline-list goto">
    <li><%= t('posts.links.goto.title') %></li>
    <li><%= link_to t('posts.links.goto.announcements'), anchor: 'announcements' %></li>
    <li><%= link_to t('posts.links.goto.questions'), anchor: 'questions' %></li>
    <li><%= link_to t('posts.links.goto.topics'), anchor: 'topics' %></li>
  </ul>
</nav>


<section>
  <header><h1><%= @group.title %></h1></header> 

  <div class="group-information">
    <p><%= @group.description %></p> 
    <%= tag_list_delimited(@group.tags) %>
  </div>
</section>

<section id="announcements">
  <%= render 'shared/announcements', limit: 10 %>
</section>

<section id="questions">
  <%= render 'shared/questions', limit: 10 %>
</section>

<section id="topics">
  <%= render 'shared/topics', limit: 10 %>
</section>


