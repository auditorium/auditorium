<span class="ribbon">
  <%= t('groups.label', type: group.group_type.capitalize) %>

  <span class="bookmark">
  <% if group.followers.include?(current_user) %>
    <%= link_to fa_icon('star'), following_group_path(group, method: 'unfollow'), remote: true, method: :post, title: t('groups.unfollow_link_text') %>
  <% else %>
    <%= link_to fa_icon('star-o'), following_group_path(group, method: 'follow'), remote: true, method: :post, title: t('groups.follow_link_text') %>
  <% end %>
  </span>
</span>

<div class="content">
  

  <span class="title"><h2><%= link_to truncate(group.title, length: 150), group_path(group) %></h2></span>

</div>

<div class="footer hide-for-small">
  <span class="group-details">
    <%= t('groups.follower_count', count: group.followers.size) %> &middot;
    <%= t('groups.announcement_count', count: group.announcements.size) %> &middot;
    <%= t('groups.question_count', count: group.questions.size) %> &middot;
    <%= t('groups.topic_count', count: group.topics.size) %>
  </span>
  <span class="right">
  <% if can? :manage, group %>
    <span class="actions">
      <%= link_to fa_icon('pencil', text: 'edit'), edit_group_path(group), alt: "#{t('groups.actions.edit')}", title: "#{t('groups.actions.edit')}" %> &middot;
      <%= link_to fa_icon('times', text: 'remove'), group, alt: "#{t('groups.actions.delete')}", title: "#{t('groups.actions.edit')}", method: :delete, confirm: 'Are you sure to delete this group?' %>
    </span>
  <% end %>
</span>
</div>
