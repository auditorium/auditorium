<% if @group.followers.include?(current_user) %>
  <%= link_to fa_icon('star', text: t('groups.unfollow')), following_group_path(@group, method: 'unfollow'), remote: true, method: :post, title: t('groups.unfollow_link_text'), class: "dark button following" %>
<% else %>
  <%= link_to fa_icon('star-o', text: t('groups.follow')), following_group_path(@group, method: 'follow'), remote: true, method: :post, title: t('groups.follow_link_text'), class: "dark button follow" %>
<% end %>