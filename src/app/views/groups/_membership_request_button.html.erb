<% if @group.membership_request_status?(current_user) == 'pending' %>
  <%= link_to t('groups.actions.cancel_membership_request'), cancel_membership_request_path(@group), class: 'button tiny notice', 'data-id' => 'cancel-membership-request', method: :post, remote: true %>
<% elsif @group.membership_request_status?(current_user) == 'rejected' %>
  <%= link_to t('groups.actions.rejected_membership_request'), remove_membership_request_path(@group), class: 'button tiny notice', 'data-id' => 'remove-membership-request', method: :post, remote: true %>
<% else %>
  <%= link_to t('groups.actions.become_moderator'), make_membership_request_path(@group), class: 'button tiny secondary', 'data-id' => 'membership-request', method: :post, remote: true %>
<% end %>