<%= form_for(@group) do |f| %>

  <div class="row">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'large-12 columns' %>
  </div>

  <div class="row">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'large-12 columns' %>
  </div>

  <div class="row">
    <%= f.label :tag_tokens %>
    <%= f.text_field :tag_tokens, data: {load: @group.tags}, class: 'large-12 columns' %>
    <p class="tags_hint hint"><%= t('groups.group_types.general.tags_hint')%></p>
  </div>

  <div class="row">
    <% if params[:action] == 'new' %>
      <%= f.submit t('groups.new.submit'), class: 'small button' %>
    <% elsif params[:action] == 'edit' %>
      <%= f.submit t('groups.edit.submit'), class: 'small button' %>
    <% end %>
  </div>

  <%= f.hidden_field :group_type %>
<% end %>