<article id="video">
  <header class="post-header">
    <span class="ribbon bigger">
      <%= t('posts.types.video') %>
      <span data-id="<%= dom_id(@video) %>" class="rating bright"><%= render 'shared/rating', post: @video %></span>
    </span>
    <h2><%= @video.subject %></h2>   
 </header>

  <div class="post-content">

    <div class="flex-video widescreen">
      <iframe width="560" height="315" src="http://www.youtube.com/embed/<%= @video.code %>" frameborder="0" allowfullscreen></iframe>
    </div>

    <%= markdown @video.content %>
  </div>

  <div class="post-footer">
    <%= t('posts.general.group') %> 
    <%= link_to @video.group.title, group_path(@video.group) %>

    <% if can? :manage, @video %> 
      <span class="right">
        <span class="created_at"><%= l(@video.created_at, format: :short) %></span>
        <span class="actions">
          &middot;
          <%= link_to fa_icon('pencil', text: 'edit'), edit_video_path(@video), alt: "#{t('posts.actions.edit')}", title: "#{t('posts.actions.edit')}" %> &middot;
          <%= link_to fa_icon('times', text: 'remove'), @video, alt: "#{t('posts.actions.delete')}", title: "#{t('posts.actions.edit')}", method: :delete, confirm: 'Are you sure to delete this video?' %>
        </span>
      </span>
    <% end %>
  </div>
</article>

<section class="comments-section">
  <%= render 'shared/comments', commentable: @video %>
</section>