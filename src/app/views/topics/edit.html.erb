<article>
  <header>
    <h2><%= t('topics.edit.title') %></h2>    
  </header>

  <div  id="topic">
    <%= form_for(@topic) do |f| %>
      <ul class="no-style">
        <li class="input-fields">
          <%= f.label :subject %>
          <%= f.text_field :subject %>
        </li>
        
        <li class="input-fields">
          <%= f.label :content %>
          <%= f.text_area :content %>
        </li>
        
        <li class="input-fields">
          <%= f.label :tag_tokens %>
          <%= f.text_field :tag_tokens, data: {load: @topic.tags} %>
          <p class="tags_hint hint"><%= t('groups.group_types.general.tags_hint')%></p>
        </li>
        
        <li class="input-fields">
          <%= f.submit t('groups.new.submit'), id: 'submit', class: 'small button' %>
        </li>
      </ul>
    <% end %>
  </div>
</article>